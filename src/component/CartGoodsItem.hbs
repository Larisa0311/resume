{{#each goodsBlock}}
<div class="card mb-4">
    <div class="row">

        <img class="col-2" src={{image}}>
        <div class="col-4">
            <h4> {{name}} </h4>
            <p> {{description}} </p>
        </div>
        <div class="col-2">
            <p class="mt-4"> {{price.title}} </p>
            <h4> {{price.value}} </h4>
        </div>
        <div class="col-2 mt-4"> {{amount}} </div>
        <div class="col-2 my-3">
            {{#each buttons}}
            <button class="my-2 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">
                {{text}} </button>
            {{/each}}
        </div>
    </div>
</div>
{{/each}}
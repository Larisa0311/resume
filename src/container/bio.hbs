{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1> {{name}} </h1>
    <div>
        <date> {{ birthdate}} </date>
        <address> {{birthplace}} </address>
        <date> {{deathdate}} </date>
        <address> {{ deathplace}} </address>
    </div>
    <p> {{ nationality}} </p>
    <p> <strong>{{occupation}}</strong> </p>

    <ul>
        {{#each known_for}}
        <li> {{this}} </li>
        {{/each}}
    </ul>

    <hr>
    <div>
        {{>title data= "Education"}}
        {{#each education}}
        {{degree}} | {{field}} | {{institution}} | {{year}}
        {{/each}}
    </div>

    <hr>
    <div>
        {{> title big=true data= "Publications"}}
        <ul>
            {{#each notable_publications}}
            <li> <q> {{title}}</q>,
                <date> {{year}}</date>, {{publisher}}
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        {{>title data="Partners"}}
        <ul>
            {{#each partners}}
            <li>
                {{name}} - {{relationship}}. <date> {{years}} </date>
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        {{>title big=true data="Awards"}}
        {{#each awards}}
        <p> {{title}}, <date> {{year}} </date>, <q> {{description}} </q> </p>
        {{/each}}
    </div>
    <hr>
    <div>
        <h4>Influences </h4>
        <ul>
            {{#each influences}}
            <li>{{this}} </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h4>Influenced </h4>
        <ul>
            {{#each influenced}}
            <li>{{this}} </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h4>Quotes </h4>
        <ul>
            {{#each quotes}}
            <li><q>{{this}}</q> </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        {{>title big=true data="Major discoveries"}}
        {{#each major_discoveries}}
        <p> {{title}}, <date> {{year}} </date>
        </p>
        <p><q> {{description}} </q> </p>
        {{/each}}
    </div>
    <hr>
    <div>
        {{>title data="Contributions"}}
        {{#with contributions}}
        <p> {{field}}: {{year}} </p>
        <p><q> {{description}} </q> </p>
        {{/with}}
    </div>

</div>


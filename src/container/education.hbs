<div>
    {{#with main}}
    <main>
        <section>
            {{!-- {{#with educations}} --}}
            {{>title big=true data= 'My educations' }}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
            {{!-- {{/with}} --}}
        </section>
        <section>
            {{!-- {{#with certificates}} --}}
            {{>title data='My certificates' }}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    ({{id}})
                </li>
                {{/each}}
            </ul>
            {{!-- {{/with}} --}}
        </section>
    </main>
    {{/with}}
</div>
<div>
    {{#with main}}
    <main>
        <section>

            {{>title big=true data= 'My education' }}
            <ul>
                {{#each educations}}
                <li class="ps-3">
                    {{name}}
                    {{#unless isEnd}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>

        </section>
        <section>

            {{>title data='My certificates' }}
            <ul>
                {{#each certificates}}
                <li class="ps-3">
                    {{name}}
                    ({{id}})
                </li>
                {{/each}}
            </ul>

        </section>
    </main>
    {{/with}}
</div>
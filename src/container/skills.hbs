<div>
    {{#with main}}
    <main>
        <section>

            {{>title big=true data= 'All skills'}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (top!) {{/if}}
                    {{#unless point}}
                    {{#if point includeZero=true}} (зараз вивчаємо) {{else}} (не вивчаємо) {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{>title data='My hobbies'}}
            <ul>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain}} (Favourite) {{/if}}

                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>
<div>
    <h1> <span class="">{{name}}</span></h1>

    <h3> <span class="">{{description}}</span></h3>
    <h4>Year: <span class=""> {{history.year}} </span></h4>
    <h4>Founder: <span class=""> {{history.founder}} </span></h4>

    <h2> <span class="badge bg-primary">Types:</span></h2>
    <ul>
        {{#each types}}
        <li> {{this}} </li>
        {{/each}}
    </ul>
    <br>

    <h2><span class="badge bg-primary">Syntax: </span></h2>

    <div class="mx-2 mb-4">
        {{#with syntax}}
        <h4><span class="badge bg-secondary"> Variables </span></h4>
        <ul>
            {{#each variables}}
            <li> {{this}} </li>
            {{/each}}
        </ul>

        <h4><span class="badge bg-secondary"> Functions </span></h4>
        <ul>
            {{#each functions}}
            <li> {{this}} </li>
            {{/each}}
        </ul>

        <h4><span class="badge bg-secondary"> Conditionals </span></h4>
        <ul>
            {{#each conditionals}}
            <li> {{this}} </li>
            {{/each}}
        </ul>

        <h4><span class="badge bg-secondary"> Loops </span></h4>
        <ul>
            {{#each loops}}
            <li> {{this}} </li>
            {{/each}}
        </ul>

        <h4><span class="badge bg-secondary"> Classes </span></h4>
        <ul>
            {{#each classes}}
            <li> {{this}} </li>
            {{/each}}
        </ul>

        {{/with}}
    </div>


    <h2><span class="badge bg-primary">Features: </span></h2>
    <ul>
        {{#each features}}
        <li> {{this}} </li>
        {{/each}}
    </ul>
    <br>

    <h2><span class="badge bg-primary">Libraries: </span></h2>
    <ul>
        {{#each libraries}}
        <li> {{this}} </li>
        {{/each}}
    </ul>
    <br>

    <h2><span class="badge bg-primary">Tools: </span></h2>
    <ul>
        {{#each tools}}
        <li> {{this}} </li>
        {{/each}}
    </ul>
    <br>

    <h2><span class="badge bg-primary">Community: </span></h2>
    <ul>
        {{#each community}}
        <li>
            <button type="button" class="btn btn-link">{{name}} ({{type}}) </button>
        </li>
        {{/each}}
    </ul>

</div>